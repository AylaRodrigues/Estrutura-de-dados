//Questao 1- Listas recursivas

#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

typedef struct lista
{
	int info;
	struct lista *prox;

}lista;

lista *InserirFinal(lista *l, int x)
{
	if (l==NULL)
	{
		lista *no=(lista*)malloc(sizeof(lista));
		no->info=x;
		no->prox=NULL;
		return no;
	}
	else
		l->prox=InserirFinal(l->prox,x);
	return l;
}

int SomarLista(lista *l, int ct){
	if(l != NULL){
		ct = ct+ l->info;
		ct = SomarLista(l->prox, ct);
	}		
	
	return ct;
}

int listaRepetido(lista *l, int ct, int elemento){
	if(l !=NULL){
		if(l->info == elemento){
			ct++;
		}
		ct = listaRepetido(l->prox,ct,elemento);
	}
	
	return ct; 
}

int main()
{
	setlocale(LC_ALL, "");
	
	int opcao = 0;
	int elemento,somaLista, repetido;
	struct lista *l = NULL; //cria lista
	
	
	while(opcao!=6)
	{
		printf("O que deseja fazer?\n 1.Inserir elemento\n 2.Somar elementos da lista\n 3.Contar elemento repetido\n 4.Remover elemento\n 5.Imprimir elementos\n 6.Sair\n");
		scanf("%d", &opcao);
		
		if (opcao==1)//Inserir elemento
		{
			printf("Qual elemento deseja inserir?\n");
			scanf("%d", &elemento);
			l= InserirFinal(l, elemento);
			printf("Elemento %d inserido.\n\n", elemento);
		}
		else if(opcao==2)//somar elementos da lista
		{
			somaLista = SomarLista(l, 0);
			if(somaLista!=NULL){
				printf("A Soma dos elementos da lista é: %d\n\n", somaLista);
			}else{
				printf("Ainda não há elementos na lista.\n\n");
			}
		}
		else if(opcao==3)//contar elementos repetidos
		{
			printf("Qual elemento você deseja verificar? \n");
			scanf("%d",&elemento);
			repetido = listaRepetido(l,0,elemento);
			printf("O elemento %d aparece %d vezes na lista.\n\n", elemento, repetido);
		}
		else if (opcao==4)//remover elemento da lista
		{
			
		}
		else if(opcao==5)//imprimir elementos
		{
			
		}
	}
		printf("O usuário saiu!\n");
	return 0;
}
